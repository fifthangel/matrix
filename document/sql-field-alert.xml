



alter table sys_error add column create_time datetime default current_timestamp comment '创建时间' ;

alter table sys_error add column create_user_id bigint(20) default '0' comment '创建人id' after create_time;

alter table sys_error add column create_user_name varchar(20) default '' comment '创建人姓名' after create_user_id;


alter table sys_error add column update_time datetime default current_timestamp comment '更新时间' after create_user_name;

alter table sys_error add column update_user_id bigint(20) default '0' comment '更新人id' after update_time;

alter table sys_error add column update_user_name varchar(20) default '' comment '更新者姓名' after update_user_id;


alter table sys_error add column delete_flag int(2) default '1' comment '删除标记: 0删除|1未删除' after update_user_name;



