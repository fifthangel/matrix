	<sql id="table_column_list">
		id, 
		job_title, 
		job_class, 
		job_triger, 
		run_group_id, 
		concurrent_type,
		begin_time,
		max_exec_time, 
		end_time, 
		next_time, 
		remark, 
		create_time, 
		create_user_id,
		create_user_name,
		update_time, 
		update_user_id, 
		update_user_name, 
		delete_flag
	</sql>
	
	<select id="find" resultMap="BaseResultMap" parameterType="java.lang.Long">
		select
			<include refid="table_column_list" />
		from 
			jobcenter.sys_job
		where id = #{id,jdbcType=BIGINT}
	</select>
	
	<!-- 根据 run_group_id 找到可运行的定时任务列表 - Yangcl -->
	<select id="findListByDto" resultMap="BaseResultMap" parameterType="com.matrix.pojo.dto.SysJobDto">
		select 
			<include refid="table_column_list" /> 
		from 
			jobcenter.sys_job  
		where
			delete_flag = 1
		and 	
			run_group_id in 
			<foreach item="item" index="index" collection="rglist"  open="(" separator="," close=")">
                   #{item} 
            </foreach>
		<if test="flagEnable != null">
			and 
				flag_enable = #{flagEnable , jdbcType=INTEGER}
		</if>
	</select>
	
	<delete id="deleteById" parameterType="java.lang.Long">
		delete from 
			jobcenter.sys_job
		where 
			id = #{id,jdbcType=BIGINT}
	</delete>
	

